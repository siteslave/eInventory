block content
    ol.breadcrumb
        li.active
            i.fa.fa-line-chart
            | &nbsp;Dashboard
            
    div(ng-app="app.pages.Index", ng-controller="IndexController")
                                                                        
        .row
            .col-sm-12.col-md-12.col-lg-12
                .panel.panel-primary
                    .panel-heading
                        i.fa.fa-bar-chart-o
                        | &nbsp;แยกรายสิทธิ์
                    .panel-body
                        highchart#chart1(config="chartConfig")
