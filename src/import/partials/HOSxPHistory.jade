.tab-pane.fade.in.active
    .row
        .col-md-6.col-lg-6.col-sm-6
            .input-group
                input(type="text", placeholder="ระบุเลขที่ใบเบิก เพื่อค้นหา").form-control.input-sm
                span.input-group-btn
                    button(type="button").btn.btn-default.btn-sm
                        i.fa.fa-search
                        | &nbsp;ค้นหา
        .col-md-6.col-lg-6.col-sm-6
            .btn-group.pull-right
                button(type="button").btn.btn-default.btn-sm
                    i.fa.fa-refresh
                    | &nbsp;ทั้งหมด
                button(type="button").btn.btn-success.btn-sm
                    i.fa.fa-check-square
                    | &nbsp;อนุมัติ
                button(type="button").btn.btn-danger.btn-sm
                    i.fa.fa-remove
                    | &nbsp;ยกเลิก

    //table order history
    table.table.table-striped
        thead
            tr
                th เลขที่
                th วันที่
                th เบิกจาก
                th จำนวน
                th ราคา
                th #
        tbody
            tr
                td(colspan="6") ...
    nav
        ul.pagination.pagination-sm
            li.disabled
                a(href="#") &laquo;
            li.active
                a(href="#") 1
                    span.sr-only (current)
            li
                a(href="#") 2
            li
                a(href="#") 3
            li
                a(href="#") 4
            li
                a(href="#") 5
            li
                a(href="#") &raquo;